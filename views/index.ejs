<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- <div
      class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500"
    >
      <span class="inline-block text-white">Error message</span>
    </div> -->
    <div class="w-full h-screen flex px-20">
      <!-- Registration Form -->
      <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
          <h3 class="text-4xl">
            Welcome to <span class="text-blue-400 font-semibold">Scatch</span>
          </h3>
          <h4 class="text-2xl mb-5">Create your account</h4>
          <form autocomplete="off" action="/users/register" method="post">
            <input
              class="bg-zinc-100 block w-full px-3 py-2 border-[2px] rounded-md mb-3 border-zinc-300"
              type="text"
              placeholder="Full Name"
              name="fullname"
            />
            <input
              class="bg-zinc-100 block w-full px-3 py-2 border-[2px] rounded-md mb-3 border-zinc-300"
              type="email"
              placeholder="Email"
              name="email"
            />
            <input
              class="bg-zinc-100 block w-full px-3 py-2 border-[2px] rounded-md mb-3 border-zinc-300"
              type="password"
              placeholder="Password"
              name="password"
            />
            <input
              class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white"
              type="submit"
              value="Create My Account"
            />
          </form>
        </div>
      </div>
      <!-- Login Form -->
      <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
          <h4 class="text-2xl capitalize mb-5">Login to your account</h4>
          <form autocomplete="off" action="/users/login" method="post">
            <input
              class="block bg-zinc-100 w-full px-3 py-2 border-[2px] rounded-md mb-3 border-zinc-300"
              type="email"
              placeholder="Email"
              name="email"
            />
            <input
              class="block bg-zinc-100 w-full px-3 py-2 border-[2px] rounded-md mb-3 border-zinc-300"
              type="password"
              placeholder="Password"
              name="password"
            />
            <input
              class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white"
              type="submit"
              value="Login"
            />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>

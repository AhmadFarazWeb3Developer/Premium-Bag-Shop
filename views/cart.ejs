<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Checkout</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- RemixIcon for icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body class="text-gray-800">
    <%- include('./partials/header') %>

    <div class="w-full px-20 py-20 flex flex-col gap-10">
      <% user.cart.forEach(function(product) { %>
      <div class="flex gap-10">
        <!-- Product Card -->
        <div class="w-[30%] rounded-md overflow-hidden shadow-lg">
          <div
            class="w-full h-80 flex items-center justify-center bg-[<%=product.bgColor %>]"
          >
            <img
              src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
              alt="<%= product.name %>"
              class="h-[12rem]"
            />
          </div>
          <div class="w-full flex justify-between px-5 py-4 bg-gray-300">
            <h3 class="text-2xl font-semibold"><%= product.name %></h3>
            <div class="flex items-center gap-2">
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow ri-add-line cursor-pointer"
              ></i>
              <div class="px-2 py-1 rounded-md bg-white text-black shadow">
                01
              </div>
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow ri-subtract-line cursor-pointer"
              ></i>
            </div>
          </div>
          <div
            class="flex items-center justify-between px-5 py-3 bg-[<%=product.panelColor%>]"
          >
            <h4 class="text-lg font-medium">Net Total</h4>
            <h2 class="text-lg font-semibold">₹ <%= product.price %></h2>
          </div>
        </div>

        <!-- Price Breakdown -->
        <div class="w-[70%] bg-white p-8 shadow-lg rounded-md">
          <h3 class="text-xl font-semibold">Price Breakdown</h3>
          <div class="px-10 mt-5">
            <div class="flex mt-2">
              <h4 class="w-1/3">Total MRP</h4>
              <h4>₹ <%= product.price %></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Discount on MRP</h4>
              <h4>₹ <%= product.discount %></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Platform Fee</h4>
              <h4>₹ 20</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Shipping Fee</h4>
              <h4>FREE</h4>
            </div>
          </div>
          <div class="w-full h-[1px] bg-gray-300 mt-10"></div>
          <div class="flex mt-5">
            <h3 class="w-1/3 text-xl font-semibold">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">
              ₹ <%= product.price+20- product.discount %>
            </h3>
          </div>
          <form action="#" class="mt-10">
            <button
              type="submit"
              class="w-full py-3 bg-green-600 text-white rounded-md shadow hover:bg-green-700"
            >
              Proceed to Payment
            </button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>

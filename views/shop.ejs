<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body class="">
    <!-- Include Header -->
    <%- include('./partials/header') %> <% if(success.length>0){ %>
    <div
      class="absolute top-5 left-1/2 -translate-x-1/2 mt-1 -translate-y-1/2 px-4 py-2 rounded-md bg-green-500"
    >
      <span class="inline-block text-white"> <%= success %> </span>
    </div>
    <% } %>
    <div class="w-full h-screen flex items-start px-20 py-20">
      <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
          <h3>Sort by</h3>
          <form action="/shop">
            <select class="border-[1px] px-2 py-1" name="sortby">
              <option value="popular">Popular</option>
              <option value="newest">Newest</option>
            </select>
          </form>
        </div>
        <div class="flex flex-col mt-20">
          <a class="block w-fit mb-2" href="">New Collection</a>
          <a class="block w-fit mb-2" href="">All Products</a>
          <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
          <a class="block w-fit mb-2" href="">Filter by:</a>
          <a class="block w-fit mb-2" href="">Availability</a>
          <a class="block w-fit mb-2" href="">Discount</a>
        </div>
      </div>
      <div class="w-[75%] flex flex-wrap gap-5 h-screen">
        <% products.forEach(function (product, index) { %> <% if (index % 3 ===
        0) { %>
        <div class="w-full flex gap-5">
          <% } %>
          <div class="w-1/3 rounded-lg">
            <div
              class="w-full h-52 flex items-center justify-center bg-[<%= product.bgColor%>] rounded-t-md"
            >
              <img
                class="h-[12rem] rounded-md"
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                alt=""
              />
            </div>
            <div
              class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelColor %>] text-[<%= product.textColor %>] rounded-b-md"
            >
              <div>
                <h3><%= product.name %></h3>
                <h4>â‚¹ <%= product.price %></h4>
              </div>
              <a
                class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                href="/addtocart/<%= product._id %>"
              >
                <i class="ri-add-line text-gray-700"></i>
              </a>
            </div>
          </div>
          <% if ((index + 1) % 3 === 0) { %>
        </div>
        <% } %> <% }); %>
      </div>
    </div>

    <!-- Include Footer -->
    <%- include('./partials/footer') %>
  </body>
</html>
